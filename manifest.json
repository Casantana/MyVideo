{
  "manifest_version": 3,
  "name": "youvoix",
  "version": "1.1.0",
  "description": "Traducci√≥n de video con IA en YouTube.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://firestore.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ]
}